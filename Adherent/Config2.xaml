<Window x:Class="AdherentSampleOven.Config2"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Settings" Height="474" Width="607">
    <Grid>
            <DockPanel>
            <Grid DockPanel.Dock="Top" Height="71" >
                <ComboBox Margin="121,20,429,28"  Name="tcBoardNumberCombo" />
                <ComboBox Margin="0,20,275,28"  Name="tcPortNumberCombo" HorizontalAlignment="Right" Width="33" />
                <ComboBox Margin="396,20,154,28"  Name="dioBordNumberCombo" />
                <TextBlock Height="23" HorizontalAlignment="Left" Margin="6,20,0,0" Name="textBlock1" Text="Temperature Board#:" VerticalAlignment="Top" />
                <TextBlock Height="23" HorizontalAlignment="Left" Margin="171,20,0,0" Name="textBlock2" Text="Temperature Port#:" VerticalAlignment="Top" />
                <TextBlock Height="23" HorizontalAlignment="Left" Margin="328,20,0,0" Name="textBlock3" Text="DIO Board#:" VerticalAlignment="Top" />
                <RadioButton GroupName="temperatureFormat" Content="°C" Name="celsiusRadioButton" Margin="452,46,96,6" />
                <RadioButton GroupName="temperatureFormat" Content="°F" Name="farenheitRadioButton" Margin="452,24,96,28" />
                <TextBlock Height="18" HorizontalAlignment="Left" Margin="452,6,0,0" Name="textBlock4" Text="Temperature Format" VerticalAlignment="Top" />
            </Grid>
            <Grid DockPanel.Dock="Bottom" Height="52">
                <Button Content="Save" HorizontalAlignment="Right" Margin="0,20,24,9" Name="saveButton" Width="75" IsDefault="True" Click="saveButton_Click" />
                <Button Content="Cancel" HorizontalAlignment="Right" Margin="0,20,123,9" Name="cancelButton" Width="75" Click="cancelButton_Click" />
            </Grid>
            <Grid  ShowGridLines="True" Name="sampleConfigGrid">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="1*" />
                        <RowDefinition Height="1*" />
                        <RowDefinition Height="1*" />
                        <RowDefinition Height="1*" />
                        <RowDefinition Height="1*" />
                        <RowDefinition Height="1*" />
                    </Grid.RowDefinitions>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="1*" />
                        <ColumnDefinition Width="1*" />
                        <ColumnDefinition Width="1*" />
                        <ColumnDefinition Width="1*" />
                        <ColumnDefinition Width="1*" />
                    </Grid.ColumnDefinitions>
                </Grid>

            </DockPanel>
    </Grid>
</Window>
